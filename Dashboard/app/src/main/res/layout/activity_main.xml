<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shopName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Super Mart"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
                    android:paddingTop="40dp"
                    android:paddingLeft="20dp" />

                <TextView
                    android:id="@+id/shopDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shop with us for great deals!"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:paddingLeft="20dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/shopImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="fitCenter"
                android:padding="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:elevation="8dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E1F5FE"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/card1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product 1"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"/>

                    <ImageView
                        android:id="@+id/card1Image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_launcher_foreground"
                        android:layout_below="@id/card1Name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:elevation="8dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFE0B2"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/card2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product 2"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"/>

                    <ImageView
                        android:id="@+id/card2Image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_launcher_foreground"
                        android:layout_below="@id/card2Name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:elevation="8dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#C8E6C9"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/card3Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product 3"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"/>

                    <ImageView
                        android:id="@+id/card3Image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_launcher_foreground"
                        android:layout_below="@id/card3Name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:elevation="8dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E1BEE7"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/card4Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product 4"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"/>

                    <ImageView
                        android:id="@+id/card4Image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_launcher_foreground"
                        android:layout_below="@id/card4Name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:elevation="8dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF9C4"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/card5Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product 5"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"/>

                    <ImageView
                        android:id="@+id/card5Image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_launcher_foreground"
                        android:layout_below="@id/card5Name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:elevation="8dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F8BBD0"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/card6Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product 6"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"/>

                    <ImageView
                        android:id="@+id/card6Image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_launcher_foreground"
                        android:layout_below="@id/card6Name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
